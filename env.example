# Shopify App Credentials
# Note: In Shopify Partner Dashboard, these are called "Client ID" and "Client Secret"
# Client ID = API Key, Client Secret = API Secret
SHOPIFY_API_KEY=your_client_id_here
SHOPIFY_API_SECRET=your_client_secret_here
SHOPIFY_SCOPES=read_products,write_price_rules,read_orders,write_refunds

# App URLs (for production)
APP_URL=https://shopify.hoomans.dev
CALLBACK_URL=https://shopify.hoomans.dev/auth/callback

# For local development with ngrok, update these:
# APP_URL=https://your-ngrok-url.ngrok.io
# CALLBACK_URL=https://your-ngrok-url.ngrok.io/auth/callback

# Server
PORT=3000

# Database
DB_PATH=./data/shops.db

# Encryption Key (generate a secure random key for production)
ENCRYPTION_KEY=change-this-to-a-secure-random-key-in-production

